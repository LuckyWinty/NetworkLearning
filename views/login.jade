extends layout

block content
    h2 登录
      h5 还没注册，前往
        a(href='/regist/') 注册
    form.form-horizontal(method='post',action='/user/login')
        .form-group
            label.col-sm-2.control-label(for="account") 账号
            .col-sm-10
                input.form-control#account(type="text",placeholder='请输入账号',name="account")
        .form-group
            label.col-sm-2.control-label(for="password") 密码
            .col-sm-10
                input.form-control#password(type="password",placeholder='请输入密码', name="password")
        .form-group
            .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type="submit") 登录
